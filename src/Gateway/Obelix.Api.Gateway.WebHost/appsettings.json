{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http": "Warning",
      "Yarp": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/api/identity/{*any}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/identity"
          }
        ]
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "identity": {
            "Address": "http://identity-service",
            "Host": "localhost"
          }
        }
      }
    }
  }
}